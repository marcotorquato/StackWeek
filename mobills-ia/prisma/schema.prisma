generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id            String                   @id @default(uuid())
  name          String
  type          TransactionType
  amount        Decimal                  @db.Decimal(10, 2)
  category      TransactionCategory
  paymentMethod TransactionPaymentMethod
  date          DateTime
  createdAt     DateTime                 @default(now())
  updatedAt     DateTime                 @updatedAt
  userId        String
}

enum TransactionType {
  DEPOSIT
  EXPENSE
  INVESTMENT
}

enum TransactionCategory {
  HOUSING
  TRANSPORTATION
  FOOD
  ENTERTAINMENT
  HEALTH
  UTILITY
  SALARY
  EDUCATION
  OTHER
}

enum TransactionPaymentMethod {
  CREDIT_CARD
  DEBIT_CARD
  BANK_TRANSFER
  BANK_SLIP
  CASH
  PIX
  PAYPAL
  OTHER
}

model Order {
  id          Int       @id @default(autoincrement())
  requester   String    
  email       String    
  requestDate DateTime  @default(now()) 
  destination Destination @relation(fields: [destinationId], references: [id])
  destinationId Int
  status      OrderStatus @default(REQUESTED) 
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  products    OrderProduct[] // Relacionamento com a tabela intermediária
}

model Product {
  id        Int             @id @default(autoincrement())
  catalog   ProductCatalog? @relation(fields: [catalogId], references: [id]) 
  catalogId Int?
  name      String         
  profile   Profile         @relation(fields: [profileId], references: [id])
  profileId Int
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  orderProducts OrderProduct[] // Relacionamento com a tabela intermediária
}

model ProductCatalog {
  id        Int       @id @default(autoincrement())
  name      String    @unique 
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[] // Relacionamento com a tabela Product
}

model Profile {
  id        Int       @id @default(autoincrement())
  name      String    @unique 
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[] // Relacionamento com a tabela Product
}

model Destination {
  id        Int       @id @default(autoincrement())
  name      String    @unique 
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  orders    Order[]   // Relacionamento com a tabela Order
}

model OrderProduct { // Tabela intermediária entre Order e Product
  orderId   Int
  productId Int
  quantity  Int
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
  @@id([orderId, productId])  // Chave composta para garantir unicidade
}

enum OrderStatus {
  REQUESTED
  UNDER_APPROVAL
  IN_PREPARATION
  DELIVERED
}
